############################################
# Application Configuration
############################################

# Name of the backend service
APP_NAME="Jobstack Seeker Backend"

# Authentication (Better Auth)
# - BETTER_AUTH_SECRET: Secret used by Better Auth for token signing (keep safe, do not commit).
# - BETTER_AUTH_URL: Endpoint where auth APIs are exposed. 
#   Use http://localhost:<BACKEND_PORT>/api/v1/auth for local dev.
BETTER_AUTH_SECRET=enter_better_auth_secret
BETTER_AUTH_URL=http://localhost:3002/api/v1/auth

############################################
# Database (PostgreSQL)
############################################

# Credentials for PostgreSQL
POSTGRES_USER=enter_postgres_user
POSTGRES_PASSWORD=enter_postgres_password
POSTGRES_DB=enter_postgres_db_name

# Local database port (useful if multiple Postgres instances are running)
DATABASE_PORT=5433

# Local database connection string
# Used by Drizzle for migrations/generate/push/studio
DATABASE_LOCAL_URL=postgres://postgresdb:mypassword@127.0.0.1:5433/postgresdb

############################################
# Caching (Redis)
############################################

# Internal Redis Password (used by services inside docker-compose)
REDIS_PASSWORD=enter_redis_password

############################################
# SMS Service (MSG91)
############################################

# - MSG91_AUTH_KEY: Authentication key from MSG91 dashboard
# - MSG91_TEMPLATE_ID: Flow/template ID for SMS
MSG91_AUTH_KEY=enter_msg91_auth_key
MSG91_TEMPLATE_ID=enter_msg91_template_id

############################################
# Whatsapp Service (twilio)
############################################
TWILIO_WHATSAPP_NUMBER=enter_twilio_whatsapp_number
TWILIO_MESSAGING_SERVICE_SID=enter_twilio_messaging_service_sid
TWILIO_AUTH_TOKEN=enter_twilio_auth_token
TWILIO_ACCOUNT_SID=enter_twilio_account_sid
TWILIO_CONTENT_SID_DIALFLOW_SEEKER=enter_twilio_content_sid

############################################
# Email Services
############################################

# AWS SES (for production email sending)
SMTP_AWS_SES=false
AWS_SECRET_ACCESS_KEY=enter_aws_secret
AWS_ACCESS_KEY_ID=enter_aws_access_key_id
AWS_REGION=enter_aws_region

# Gmail SMTP (for development/testing email sending)
# Requires Gmail App Password (not account password)
SMTP_GMAIL=true
GMAIL_USER=enter_gmail_user_email
GMAIL_PASS=enter_gmail_app_password

############################################
# Server Configuration
############################################

# Local port exposed for the backend
BACKEND_PORT=3002

# Public server endpoint (e.g., https://api.example.com)
SERVER_ENDPOINT=enter_server_endpoint

# Node environment (production, development, test)
NODE_ENV=production

# Feature Flags 

# Enable/disable email logging for debug
MAIL_LOG="false"
# Enable/disable general logging for debug
LOG_ACTIVITY="false"
# Enable/disable whatsapp notification messaging
SEND_WHATSAPP_NOTIFICATION="true"
