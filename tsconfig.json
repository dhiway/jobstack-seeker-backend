{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/fastify.d.ts"
    ],
    "baseUrl": ".",
    "paths": {
      "@db/*": [
        "src/db/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@types/*": [
        "src/types/*"
      ],
      "@validation/*": [
        "src/validation/*"
      ],
      "@src/*": [
        "src/*"
      ]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
